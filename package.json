{
  "name": "convex-env",
  "type": "module",
  "version": "2.2.0",
  "license": "MIT",
  "description": "Type-safe access to environment variables in Convex",
  "exports": {
    ".": "./dist/index.mjs",
    "./presets": "./dist/presets.mjs",
    "./package.json": "./package.json"
  },
  "keywords": [
    "convex",
    "env",
    "environment variables"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bentsignal/convex-env.git"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "oxlint --type-aware --type-check",
    "lint:fix": "oxlint --type-aware --type-check --fix && oxfmt",
    "fmt": "oxfmt",
    "test": "vitest",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "convex-helpers": "^0.1.108"
  },
  "peerDependencies": {
    "convex": ">=1.20.0"
  }
}
